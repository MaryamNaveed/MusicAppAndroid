<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_weight=".1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/back">

                </ImageView>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:text="Edit Profile"
                    android:textColor="@color/white"
                    android:textSize="30dp">

                </TextView>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3">
                <TextView
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Save"
                    android:textColor="#FFC107"
                    android:textSize="15dp"
                    android:gravity="center">

                </TextView>

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".24">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/profile">

            </de.hdodenhof.circleimageview.CircleImageView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".09"
            android:gravity="center">
            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Username"
                android:textSize="20dp"
                android:textColor="#FFC107">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".12">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp">

                <EditText
                    android:id="@+id/prevemail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/roundedtextfield"
                    android:hint="email"
                    android:inputType="text"
                    android:padding="15dp"
                    android:textColor="#FFC107"
                    android:textColorHint="#FFC107"
                    android:textSize="20dp">

                </EditText>


            </RelativeLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".12">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp">

                <EditText
                    android:id="@+id/prevpassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/roundedtextfield"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:textColor="#FFC107"
                    android:textColorHint="#FFC107"
                    android:textSize="20dp">

                </EditText>
                <TextView
                    android:id="@+id/show1"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:text="show"
                    android:gravity="center"
                    android:textColor="#FF9800"
                    android:clickable="true">

                </TextView>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".12">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp">

                <EditText
                    android:id="@+id/newemail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/roundedtextfield"
                    android:inputType="text"
                    android:padding="15dp"
                    android:hint="New Email"
                    android:textColor="#FFC107"
                    android:textColorHint="#FFC107"
                    android:textSize="20dp">

                </EditText>


            </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".12">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp">

                <EditText
                    android:id="@+id/newpassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/roundedtextfield"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:hint="New Password"
                    android:textColor="#FFC107"
                    android:textColorHint="#FFC107"
                    android:textSize="20dp">

                </EditText>
                <TextView
                    android:id="@+id/show"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:text="show"
                    android:gravity="center"
                    android:textColor="#FF9800"
                    android:clickable="true">

                </TextView>
            </RelativeLayout>

        </LinearLayout>














        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:background="#434343">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/mNavigationBottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:itemTextColor="@color/white"
                app:itemIconSize="50dp"
                app:itemIconTint="#FFC107"
                app:elevation="6dp"
                app:labelVisibilityMode="labeled"
                app:itemBackground="@drawable/bg_color_tab"
                app:menu="@menu/bottom_navigation_menu"
                >

            </com.google.android.material.bottomnavigation.BottomNavigationView>


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>